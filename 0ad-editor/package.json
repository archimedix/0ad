{
  "name": "0ad-map-editor",
  "version": "1.0.0",
  "description": "Web-based map editor for 0 A.D.",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
